{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@viccoboard/core": ["../../packages/core/src"],
      "@viccoboard/core/*": ["../../packages/core/src/*"],
      "@viccoboard/storage": ["../../packages/storage/src"],
      "@viccoboard/storage/*": ["../../packages/storage/src/*"],
      "@viccoboard/plugins": ["../../packages/plugins/src"],
      "@viccoboard/plugins/*": ["../../packages/plugins/src/*"],
      "@viccoboard/students": ["../../modules/students/src"],
      "@viccoboard/students/*": ["../../modules/students/src/*"],
      "@viccoboard/sport": ["../../modules/sport/src"],
      "@viccoboard/sport/*": ["../../modules/sport/src/*"],
      "@viccoboard/exams": ["../../modules/exams/src"],
      "@viccoboard/exams/*": ["../../modules/exams/src/*"],
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true
  },
  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/storage" },
    { "path": "../../packages/plugins" },
    { "path": "../../modules/students" },
    { "path": "../../modules/sport" },
    { "path": "../../modules/exams" }
  ],
  "files": ["src/shims-vue.d.ts"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "../../packages/core/src/**/*",
    "../../packages/storage/src/**/*",
    "../../packages/plugins/src/**/*",
    "../../modules/students/src/**/*",
    "../../modules/sport/src/**/*",
    "../../modules/exams/src/**/*"
  ],
  "exclude": ["node_modules", "src/views-wip/**", "src/**/*.d.ts"]
}

