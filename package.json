{
  "name": "viccoboard",
  "version": "0.1.0",
  "description": "Unified Teacher Suite - SportZens + KURT",
  "private": true,
  "workspaces": [
    "packages/*",
    "modules/*",
    "apps/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:all",
    "build:packages": "npm run build --workspace=@viccoboard/core --workspace=@viccoboard/plugins --workspace=@viccoboard/storage --workspace=@viccoboard/exams --workspace=@viccoboard/sport",
    "build:all": "npm run build:packages && npm run build --workspace=@viccoboard/demo --workspace=teacher-ui",
    "build:ipad": "npm run build:packages && npm run build --workspace=teacher-ui",
    "demo": "npm run build:packages && cd apps/demo && npm run dev",
    "install:all": "npm install && npm install --workspaces",
    "lint:docs": "node scripts/doc-guardrails.mjs"
  },
  "keywords": [
    "education",
    "sports",
    "assessment",
    "grading",
    "teacher-tools"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.0",
    "sql.js": "^1.13.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/sql.js": "^1.4.9"
  }
}
