  "devDependencies": {
    "fake-indexeddb": "^6.2.0",
    "@types/uuid": "^9.0.8",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.0.0",
    "ts-jest": "^29.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/bcryptjs": "^2.4.2",
    "better-sqlite3": "^12.6.2",
    "typescript": "^5.0.0"
